<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,ContentDescription,UselessParent,RtlHardcoded" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/cell_folder_view_image"
                android:layout_width="@dimen/folder_list_image_width"
                android:layout_height="@dimen/folder_list_image_height"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_128_tiny_picture_viewer" />

            <CheckBox
                android:id="@+id/cell_folder_view_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:checked="true"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cell_folder_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/cell_folder_view_folder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Folder aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            <TextView
                android:id="@+id/cell_folder_view_no_of_pictures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Files"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
                android:id="@+id/cell_folder_view_latest_picture_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000/00/00 00:00:00"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
                android:id="@+id/cell_folder_view_directory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="start"
                android:maxLines="4"
                android:text="/sdcard/Pictures"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>