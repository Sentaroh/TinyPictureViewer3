<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view_folder_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,TextFields,LabelFor" >

    <GridView
        android:id="@+id/main_view_folder_grid_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:columnWidth="250dp"
        android:horizontalSpacing="8dp"
        android:fastScrollEnabled="false"
        android:listSelector="@drawable/grid_view_selector"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp" 
        android:scrollbarStyle="outsideInset">

    </GridView>

    <include layout="@layout/context_view_folder" />

</LinearLayout>