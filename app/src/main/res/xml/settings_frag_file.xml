<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
  	<CheckBoxPreference
		android:key="@string/settings_process_hidden_files"
		android:title="@string/settings_process_hidden_files_title"
		android:summary="@string/settings_process_hidden_files_summary_ena" />

    <ListPreference
		android:key="settings_folder_filter_character_count"
		android:title="@string/settings_folder_filter_character_count_title"
		android:summary="@string/settings_folder_filter_character_count_summary"
		android:dialogTitle="@string/settings_folder_filter_character_count_dialog_title"
		android:entries="@array/settings_folder_filter_character_count_list_entries"
		android:entryValues="@array/settings_folder_filter_character_count_list_values"/>

  	<CheckBoxPreference
		android:key="@string/settings_camera_folder_always_top"
		android:title="@string/settings_camera_folder_always_top_title"
		android:summary="@string/settings_camera_folder_always_top_summary_ena" />
    
    <ListPreference
		android:key="@string/settings_file_changed_auto_detect"
		android:title="@string/settings_file_changed_auto_detect_title"
		android:summary="@string/settings_file_changed_auto_detect_summary"
		android:dialogTitle="@string/settings_file_changed_auto_detect_dialog_title"
		android:entries="@array/settings_file_changed_auto_detect_list_entries"
		android:entryValues="@array/settings_file_changed_auto_detect_list_values"/>

    <CheckBoxPreference
        android:key="@string/settings_suppress_add_external_storage_notification"
        android:title="@string/settings_suppress_add_external_storage_notification_title"
        android:summary="@string/settings_suppress_add_external_storage_notification_message"
        />

    <com.sentaroh.android.Utilities3.Preference.CustomDialogPreference
		android:key="@string/settings_clear_cache"
		android:title="@string/settings_clear_cache_title"
		android:dialogMessage="@string/settings_clear_cache_message"
		/>

</PreferenceScreen>