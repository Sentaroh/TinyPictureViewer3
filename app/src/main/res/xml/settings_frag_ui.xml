<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings_ui_title">
        <CheckBoxPreference
            android:key="@string/settings_picture_display_option_restore_when_startup"
            android:title="@string/settings_picture_display_option_restore_when_startup_title"
            android:summary="@string/settings_picture_display_option_restore_when_startup_summary_ena" />

        <ListPreference
            android:key="@string/settings_picture_display_default_ui_mode"
            android:title="@string/settings_picture_display_default_ui_mode_title"
            android:summary="@string/settings_picture_display_default_ui_mode_summary"
            android:dialogTitle="@string/settings_picture_display_default_ui_mode_dialog_title"
            android:entries="@array/settings_picture_display_default_ui_mode_list_entries"
            android:entryValues="@array/settings_picture_display_default_ui_mode_list_values"/>

        <CheckBoxPreference
            android:key="@string/settings_max_screen_brightness_when_image_showed"
            android:title="@string/settings_max_screen_brightness_when_image_showed_title"
            android:summary="@string/settings_max_screen_brightness_when_image_showed_summary_ena" />
    </PreferenceCategory>

</PreferenceScreen>